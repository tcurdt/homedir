SITE=tcurdt@vserver-de

rsync -rtlzv --delete --ignore-errors --exclude "lost+found" --stats --progress \
        --exclude "src" \
        $SITE:/home/tcurdt/ \
        $HOME/Backup/hosteurope/home/tcurdt/

rsync -rtlzv --delete --ignore-errors --exclude "lost+found" --stats --progress \
        $SITE:/var/www/ \
        $HOME/Backup/hosteurope/var/www/

rsync -rtlzv --delete --ignore-errors --exclude "lost+found" --stats --progress \
        $SITE:/var/nodejs/ \
        $HOME/Backup/hosteurope/var/nodejs/
