#!/bin/sh

watch_apple_store()
{
  while true; do
    BACKSOON=`curl -s http://store.apple.com/ | grep "store/backsoon"`
    if [ "$BACKSOON" = "" ]; then
      growlnotify -s -m 'The AppStore is back!'
      open 'http://store.apple.com/'
      exit
    else
      sleep 20
    fi
  done
}

watch_apple_store &
